{
  "name": "deskhand",
  "version": "0.1.0",
  "description": "Lightweight AI desktop agent",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "bun test || echo 'No tests found'",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "electron:dev": "bun run scripts/electron-dev.ts",
    "electron:build": "bun run scripts/electron-build.ts",
    "electron:start": "bun run electron:build && electron apps/electron"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
